body.bg-white
    // 상단 네비바
    #top_navbar
        nav.navbar.navbar-light.alert-warning.navbar-expand-lg
            a.navbar-brand(href='/')
                img(src='/images/balance_logo_remove.png', width='200', height='40', alt= )
            // 검색창
            button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent'
                aria-expanded='false' aria-label='Toggle navigation')
                span.navbar-toggler-icon
            .collapse.navbar-collapse#navbarSupportedContent
                ul.navbar-nav.mr-auto
                    li.nav-item
                        form.form-inline(style='justify-content: right; margin-left:460px;')
                            input.form-control.mr-sm-2(type='search', placeholder='Search', aria-label='Search')
                            button.btn.btn-outline-success.my-2.my-sm-0(type='submit', style='background-color: white;') Search
                // 사용자

                ul.navbar-nav.justify-content-end
                    if !user
                        li.nav-item
                            a.nav-link(href='/login') 로그인
                        li.nav-item
                            a.nav-link(href='/sign-up') 회원가입
                    else
                        li.nav-item.dropdown
                            .btn-group
                                button.btn.btn-warning(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false',
                                    style='background-color: #f2eba7; border:none; outline:none;')
                                    // 사용자 이미지
                                    a.navbar-brand(href='#')
                                        img(src='images/ic_pic.gif', width='20', height='20', alt='', loading='lazy', style='border-radius: .25rem;')
                                    | #{user.nickname} ▼
                                .dropdown-menu.dropdown-menu-sm-right
                                    a.dropdown-item(href='#') 마이페이지
                                    a.dropdown-item(href='#') 출석부
                                    a.dropdown-item(href='#') 내가 쓴 글
                                    a.dropdown-item(href='#') 좋아요한 글
                                    .dropdown-divider
                                    a.dropdown-item(href='/auth/logout') 로그아웃
    .row.justify-content-center
        .col-9
            block content
        .col-3
            .thumbnail.mr-5.ml-5
                .thumb-wapper
                    img(src='/images/chick.png' width=50 height=50)
                .text-area
                    label=user.nickname
                .mail=user.email
                .progress
                    .progress-bar(role='progressbar' style='width: 25%;' aria-valuenow='25' aria-valuemin='0' aria-valuemax='100') 25%

            // 우측 네비게이션바
            #list-tab.list-group.mt-5(role='tablist')
                a#list-best-vs-list.list-group-item.list-group-item-action(href='#' role='tab' aria-controls='settings') &#xBCA0;&#xC2A4;&#xD2B8; vs &#xAC8C;&#xC2DC;&#xD310;
                a#list-best-free-list.list-group-item.list-group-item-action(href='#' role='tab' aria-controls='profile') &#xBCA0;&#xC2A4;&#xD2B8; &#xC790;&#xC720;&#xAC8C;&#xC2DC;&#xD310;
                a#list-vs-list.list-group-item.list-group-item-action(href='choice.html' role='tab' aria-controls='messages') vs &#xAC8C;&#xC2DC;&#xD310;
                a#list-free-list.list-group-item.list-group-item-action(href='/board/free/1' role='tab' aria-controls='settings') 자유게시판
